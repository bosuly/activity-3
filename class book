package practice.problem;

/**
 *
 * @author MELENDRES_COMP111
 */
public class book {
     private String title;
    private String author;
    private int copies;
    private int numberofpages;

  
    public book(String title, String author, int copies,int numberofpages) {
        this.title = title;
        this.author = author;
        this.copies = copies;
        this.numberofpages=numberofpages;
    }

  
    public void displayInfo() {
        System.out.println("Title: " + title + ", Author: " + author + ", Copies: " + copies+ ", Number of pages: "+ numberofpages);
    }

   
    public String getTitle() {
        return title;
    }

    public void setTitle(String title) {
        this.title = title;
    }

    public int getCopies() {
        return copies;
    }

    public void setCopies(int copies) {
        this.copies = copies;
        
    }public void getnumber_of_copies(int copies) {
        this.numberofpages = copies;
        
    }public int setnumber_of_copies(int copies) {
        return numberofpages;
}

}


